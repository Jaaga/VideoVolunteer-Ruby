- all = array_set

%h1 New Story

%h3= "State: #{ @state.state }, #{ @state.state_abb }"

%form.form-horizontal{ action: '/new', method: 'post' }
  = haml :'trackers/new_form', locals: { title: 'Story', columns: all[:story],
                                        special: [], number: [], yesno: [] }
  = haml :'trackers/new_form', locals: { title: 'Status', columns: all[:status],
                                         special: [], number: [], yesno: [] }
  = haml :'trackers/new_form', locals: { title: 'Footage',
                                         columns: all[:footage],
                                         special: all[:special], number: [],
                                         yesno: [] }
  = haml :'trackers/new_form', locals: { title: 'Impact', columns: all[:impact],
                                         special: all[:special],
                                         number: all[:numbers],
                                         yesno: all[:yesno] }
  = haml :'trackers/new_form', locals: { title: 'Screening',
                                         columns: all[:screening], special: [],
                                         number: all[:numbers],
                                         yesno: all[:yesno] }
  = haml :'trackers/new_form', locals: { title: 'Ratings',
                                         columns: all[:ratings], special: [],
                                         number: [], yesno: [] }

  %button.btn.btn-default.btn-block{ type: 'submit' } Submit
